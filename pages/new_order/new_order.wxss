/* pages/new_order/new_order.wxss */
.card-product {
  overflow: hidden;
  background: white;
  margin: 20rpx;
  box-shadow: 0 0 8px rgba(0,0,0,0.2);
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24px;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  padding: 60rpx;
  width: 500rpx
}

.h2 {
  font-size: 16px;
  font-weight: bold;
  margin: 0;
  color: black;
}

.p {
  font-size: 12px;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  margin-top: 8px;
  color: black;
}